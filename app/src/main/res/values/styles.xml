<resources>

    <!-- Base application theme. -->
    <style name="IceTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Major Theme Colors -->
        <item name="colorPrimary">@color/Deep_Blue</item>
        <item name="colorPrimaryDark">@color/Dark_Deep_Blue</item>
        <item name="colorAccent">@color/BurntOrangeLight</item>
        <item name="colorSurface">@color/Ice_White</item>

        <!-- Theme Background Color -->
        <item name="android:windowBackground">@color/Ice_White</item>

        <!-- Theme Text Colors -->
        <item name="android:textColorPrimary">@color/Slate2</item>
        <item name="android:textColorPrimaryInverse">@color/White</item>
        <item name="editTextColor">@color/Slate2</item>

        <!-- Theme Button Colors -->
        <!-- Primary Button Colors -->
        <item name="activeButtonColor">@color/Deep_Blue</item>
        <item name="inactiveButtonColor">@color/Dirty_White</item>
        <item name="pressedButtonColor">@color/Deep_Blue</item>
        <!-- Secondary Button Colors -->
        <item name="secondaryActiveButtonColor">?attr/colorAccent</item>
        <item name="secondaryInactiveButtonColor">@color/Dirty_White</item>
        <item name="secondaryPressedButtonColor">?attr/colorAccent</item>

        <!-- Theme Widget Styles -->
        <item name="checkboxStyle">@style/AppCheckboxStyle</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
        <item name="alertDialogTheme">@style/IceTheme.Dialog.Alert</item>
    </style>

    <style name="IceTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/BurntOrangeLight</item>
        <item name="android:textColorPrimary">@color/Slate2</item>
        <item name="editTextColor">@color/Slate2</item>
    </style>
    <style name="DialogTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dialog_side_margin</item>
        <item name="android:paddingLeft">@dimen/dialog_side_margin</item>
    </style>

    <!-- Text Styles -->
    <style name="InverseText">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:background">?android:colorPrimary</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>
    <style name="SeeAllText" parent="HeaderText">
        <item name="android:textSize">@dimen/see_all_text_size</item>
    </style>
    <style name="TopTrackText">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Widget Styles -->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:colorBackground">?attr/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/White</item>
        <item name="android:titleTextStyle">@color/White</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="RoundButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:elevation">@dimen/standard_elevation</item>
        <item name="android:layout_width">@dimen/round_button_size</item>
        <item name="android:layout_height">@dimen/round_button_size</item>
    </style>

    <style name="AppCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:tint">@color/White</item>
        <item name="android:backgroundTint">@color/Deep_Blue</item>
        <item name="rippleColor">@color/Ice_White</item>
    </style>
</resources>
