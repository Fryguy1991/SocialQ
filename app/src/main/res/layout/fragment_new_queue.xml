<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <EditText
        android:id="@+id/et_queue_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_side_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/dialog_side_margin"
        android:hint="@string/queue_title"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_fairplay_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dialog_side_margin"
        android:layout_marginTop="@dimen/standard_spacing"
        android:checked="@bool/fair_play_default"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/et_queue_name"
        android:text="@string/enable_fair_play"/>

    <ImageView
        android:id="@+id/iv_fairplay_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_info_outline"
        app:layout_constraintStart_toEndOf="@id/cb_fairplay_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/cb_fairplay_checkbox"
        app:layout_constraintTop_toTopOf="@id/cb_fairplay_checkbox" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_base_playlist_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dialog_side_margin"
        android:layout_marginTop="@dimen/standard_spacing"
        android:checked="@bool/load_base_playlist_by_default"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/cb_fairplay_checkbox"
        android:text="@string/use_base_playlist"/>

    <ImageView
        android:id="@+id/iv_base_playlist_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_info_outline"
        app:layout_constraintStart_toEndOf="@id/cb_base_playlist_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/cb_base_playlist_checkbox"
        app:layout_constraintTop_toTopOf="@id/cb_base_playlist_checkbox" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_base_playlists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/tight_spacing"
        android:layout_marginStart="@dimen/dialog_side_margin"
        android:layout_marginEnd="@dimen/dialog_side_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btn_start_queue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_base_playlist_checkbox" />

    <Button
        android:id="@+id/btn_start_queue"
        style="@style/RoundButtonStyle"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/add_queue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>