<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_current_track_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_current_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_current_track_name"/>

    <Button
        android:id="@+id/btn_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_current_artist_name"
        android:text="@string/play_btn"
        android:textAllCaps="true"
        android:contentDescription="queue_paused"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_btn"
        android:textAllCaps="true"
        android:layout_toEndOf="@id/btn_play_pause"
        android:layout_alignBottom="@id/btn_play_pause"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_queue_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_play_pause"
        android:layout_marginTop="10dp"/>
</RelativeLayout>