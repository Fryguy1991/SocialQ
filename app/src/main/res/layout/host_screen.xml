<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_host_layout_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App Toolbar -->
    <!-- THIS NEEDS TO BE AT THE TOP OF EVERY ACTIVITY -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        android:theme="@style/ToolBarStyle"/>

    <!-- START HOST LIST ELEMENTS-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_queue_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar" />

    <ImageView
        android:id="@+id/btn_play_pause"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:contentDescription="queue_paused"
        android:background="@drawable/play_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/RoundButtonStyle"/>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/RoundButtonStyle"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_host_list_elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="rv_queue_list_view,btn_play_pause,btn_next" />
    <!-- END HOST LIST ELEMENTS-->
</androidx.constraintlayout.widget.ConstraintLayout>