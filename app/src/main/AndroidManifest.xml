<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chrisfry.socialq">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

    <!-- Application Activities -->
        <!-- Activity for Host Screen -->
        <activity
            android:name="userinterface.activities.HostActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <!-- Activity for Client Screen -->
        <activity
            android:name="userinterface.activities.ClientActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <!-- Activity for Launch Screen -->
        <activity
            android:name="userinterface.activities.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
        </activity>

        <!-- Activity for Queue Connect Screen -->
        <activity
            android:name="userinterface.activities.QueueConnectActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <!-- Activity for Search Screen -->
        <activity
            android:name="userinterface.activities.SearchActivity"
            android:label="@string/search_activity_name"
            android:screenOrientation="portrait"
            android:parentActivityName="userinterface.activities.HostActivity"/>

        <!-- Activity for Spotify login (created by Spotify) -->
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Application Services -->
        <!-- Service for playing queue in background -->
        <service android:name="services.PlayQueueService"/>

    </application>

</manifest>
